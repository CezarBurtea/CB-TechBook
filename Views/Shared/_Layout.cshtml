<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mysql_connect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mysql_connect.styles.css" asp-append-version="true" />
    <style>
        /* Add custom styles here */
        .top-title-bar {
            background-color: transparent;
        }

        .navbar-title {
            font-size: 24px; /* Adjust the font size as needed */
            color: black; /* Initial text color */
            margin-left: auto; /* Push the navbar-title to the right */
            transition: color 0.3s; /* Smooth transition for color change */
        }

            .navbar-title a {
                color: inherit; /* Use the same color as the parent (.navbar-title) */
                text-decoration: none; /* Remove underline */
            }

                .navbar-title a:hover {
                    color: turquoise; /* Change color on hover */
                }
    </style>
</head>
<body>

    <!-- Top bar for site title (without search bar) -->
    <div class="top-title-bar bg-light border-bottom box-shadow mb-3">
        <div class="container">
            <div class="d-flex justify-content-end align-items-center">
                <div class="navbar-title">
                    <a asp-area="" asp-controller="Home" asp-action="Index">CB TechBook</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation bar -->
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent border-bottom box-shadow mb-3">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    @*<li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </li>*@
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Accesoriu" asp-action="Index">Accesorii</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Categorie" asp-action="Index">Categorii</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Client" asp-action="Index">Clienti</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Laptop" asp-action="Index">Laptop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Comanda" asp-action="Index">Comanda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="SO" asp-action="Index">Sisteme de Operare</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Categorie" asp-action="ShowSearchForm">Search Categorie</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Comanda" asp-action="ShowSearchForm">Search Comanda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="SO" asp-action="ShowSearchForm">Search Sistem de Operare</a>
                    </li>

                    <partial name="_LoginPartial" />
</div>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - mysql_connect - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
