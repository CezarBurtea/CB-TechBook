@model mysql_connect.Models.Accesoriu

@{
    ViewData["Title"] = "Details";
}

<style>
    .details-container {
        display: flex;
        justify-content: center;
        align-items: center;
        
    }

    .btn-details {
        background-color: #17a2b8; /* Teal */
        color: #fff; /* White */
    }


    .action-button {
        margin-bottom: 10px; /* Adjust the margin for space between buttons */
        transition: all 0.3s ease;
    }

        .action-button:hover {
            transform: scale(1.1);
            opacity: 0.8;
        }

    .details-section {
        margin-left: 20px; /* Adjust the margin as needed for space between image and details */
    }

        .details-section img {
            max-width: 300px; /* Adjust the max-width of the image as needed */
            max-height: 300px; /* Adjust the max-height of the image as needed */
            margin-right: 10px; /* Adjust the margin as needed for space between image and details */
        }
</style>

<h1>Details</h1>

<h4>Accesorii</h4>
<hr />


<div>
    <a asp-action="Index" class="btn btn-details action-button">Back to List</a>
</div>

<div class="details-container">
    <!-- Image -->
    <div class="details-section">
        <img src="@Model.ImageUrl" alt="Accesoriu Image" class="img-thumbnail" />
    </div>

    <!-- Details -->
    <div class="details-section">
        <dl class="row">
            <dt>
                @Html.DisplayNameFor(model => model.ID_Categorie)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ID_Categorie)
            </dd>

            <!-- Add details for other properties as needed -->
            <dt>
                @Html.DisplayNameFor(model => model.Tip)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Tip)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Nume_Accesoriu)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nume_Accesoriu)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Pret)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Pret)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Stoc)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Stoc)
            </dd>
        </dl>
    </div>
</div>

